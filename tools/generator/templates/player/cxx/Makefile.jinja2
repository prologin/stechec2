{% import 'macros/make.jinja2' as make %}

# Add all your sources (must be suffixed by *.cc) in here, separated by spaces
CHAMPION_SOURCES = champion.cc
# Add all other files, like your headers in here, separated by spaces
CHAMPION_HEADERS =

# ----
# Do not modify the lines below

CHAMPION_HEADERS += api.hh
INTERFACE_SOURCES = interface.cc
SOURCES = $(CHAMPION_SOURCES) $(CHAMPION_HEADERS) $(INTERFACE_SOURCES)

{{ make.common_flags() }}

objs = $(CHAMPION_SOURCES:.cc=.o) $(INTERFACE_SOURCES:.cc=.o)
deps = $(objs:.o=.d)

champion.so: $(objs)
	$(CXX) -o $@ $^ -shared


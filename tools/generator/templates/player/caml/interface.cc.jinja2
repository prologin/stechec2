template <typename CxxType>
value cxx_to_caml_array(const std::vector<CxxType>& in)
{
    CAMLparam0();
    CAMLlocal1(v);
    size_t size = in.size();
    if (size == 0)
        CAMLreturn(Atom(0));
    v = caml_alloc(size, 0);
    for (size_t i = 0; i < size; ++i)
        caml_initialize(&Field(v, i), cxx_to_caml<value, CxxType>(in[i]));
    CAMLreturn(v);
}


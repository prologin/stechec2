}

template<>
value cxx_to_caml<value, std::string>(std::string in)
{
    CAMLparam0();
    size_t l = in.length();
    char* out = (char *) malloc(l + 1);
    out[l] = 0;
    CAMLreturn(caml_copy_string(in.c_str()));
}


{% import 'macros/make.jinja2' as make %}

# Add all your sources (must be suffixed by *.php) in here, separated by spaces
CHAMPION_SOURCES = champion.php

# ----
# Do not modify the lines below

CHAMPION_SOURCES += api.php
INTERFACE_SOURCES = interface.cc
SOURCES = $(INTERFACE_SOURCES)

{{ make.common_flags() }}
CXXFLAGS += $(shell php-config --includes)
LDFLAGS += $(shell php-config --libs --ldflags) -lphp7

objs = $(INTERFACE_SOURCES:.cc=.o)
deps = $(objs:.o=.d)

champion.so: $(objs)
	$(CXX) -o $@ $^ -shared $(LDFLAGS)

{{ make.common_rules('php') }}

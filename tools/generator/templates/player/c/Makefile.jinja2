{% extends "includes/Makefile.language.jinja2" %}

{% block lang %}c{% endblock %}
{% block champion_files %}champion.c{% endblock %}
{% block generated_files %}interface.cc api.h{%endblock %}

{% block extra_flags %}
CFLAGS = -ggdb3 -Wall -std=c11 -fPIC
CPPFLAGS += -MMD -MP
{% endblock %}

{% block extra_rules %}
c_sources = $(filter %.c,$(CHAMPION_FILES))
objs += $(c_sources:.c=.o)

deps = $(objs:.o=.d)
to_clean += $(deps)
-include $(deps)
{% endblock %}

import os.path
import re

paths = {
    "prefix": "@prefix@",
    "exec_prefix": "@exec_prefix@",
    "sysconfdir": "@sysconfdir@",
    "workernodedir": "@libdir@/worker-node",
    "cfgdir": "/etc/stechec",
}

def expand_path(p):
    return re.sub(r'\$\{(.*?)\}', lambda m: expand_path(paths[m.group(1)]), p)

paths = {name: expand_path(path) for name, path in paths.iteritems()}

config_file = os.path.join(paths['cfgdir'], "worker-node.yml")
compile_script = os.path.join(paths['workernodedir'], "compile-champion.sh")
stechec_server = os.path.join(paths['bindir'], "stechec2-server")
stechec_client = os.path.join(paths['bindir'], "stechec2-client")
libdir = paths['libdir']
